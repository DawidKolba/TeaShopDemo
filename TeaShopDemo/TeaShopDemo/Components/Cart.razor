@using TeaShopDemo.Models
@inject TeaShopDemo.Services.CartService CartService

<h3>Your Cart</h3>

@if (CartService.GetCartItems().Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in CartService.GetCartItems())
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price.ToString()</td>
                    <td>@item.Quantity</td>
                    <td>@(item.Price * item.Quantity)</td>
                    <td>
                        <button class="btn btn-danger btn-sm" @onclick="() => RemoveItem(item.ProductId)">Remove</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <h4>Total Price: @CartService.GetTotalPrice().ToString()</h4>
    <button class="btn btn-secondary" @onclick="ClearCart">Clear Cart</button>
}
else
{
    <p>Your cart is empty.</p>
}

@code {
    void RemoveItem(int productId)
    {
        CartService.RemoveFromCart(productId);
    }

    void ClearCart()
    {
        CartService.ClearCart();
    }
}
